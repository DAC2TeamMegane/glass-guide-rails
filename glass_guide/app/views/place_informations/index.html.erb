  <tr>
    <td><%= place_information.name %></td>
    <td><%= place_information.description %></td>
    <td><%= place_information.url %></td>
    <td><%= place_information.beacon_data1 %></td>
    <td><%= place_information.beacon_data2 %></td>
    <td><%= link_to '詳細', place_information %></td>
    <td><%= link_to '編集', edit_place_information_path(place_information) %></td>
